{
  "expo": {
    "name": "MixMind",
    "slug": "mixmind",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#111827"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mixmind.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#111827"
      },
      "package": "com.mixmind.app",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "MixMind - Smart Cocktail Mixing"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow MixMind to access camera for ingredient analysis."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow MixMind to access photos for ingredient analysis.",
          "cameraPermission": "Allow MixMind to access camera for ingredient analysis."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      }
    }
  }
}
